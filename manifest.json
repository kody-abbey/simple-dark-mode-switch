{
  "manifest_version": 2,
  "author": "Kody",
  "name": "Simple Dark Mode Switch",
  "version": "1.0",
  "description": "Lightweight manual dark mode toggle per domain.",

  "permissions": ["activeTab", "storage"],

  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": "icons/icon.svg"
  },

  "icons": {
    "48": "icons/icon.png"
  },

  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ]
}
